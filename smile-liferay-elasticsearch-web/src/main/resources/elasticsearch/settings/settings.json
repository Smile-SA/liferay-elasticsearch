{
  "analysis": {
    "analyzer": {
      "keyword_lowercase": {
        "tokenizer": "keyword",
        "filter":  "lowercase"
      }
    },
    "analyzer": {
      "smile_french": {
        "tokenizer": "standard",
        "filter":  ["standard", "word_delimiter", "lowercase","asciifolding","french_stemmer"]
      }
    },
    "analyzer": {
      "asset_tag_name": {
        "tokenizer": "whitespace",
        "filter": [
          "lowercase", "stop", "trim", "word_delimiter"
        ]
      }
    },
    "filter": {
      "french_stemmer":{
        "type": "stemmer",
        "name": "light_french"
      }
    }
  }
}