		<control-panel-entry-weight>100</control-panel-entry-weight>
		<instanceable>false</instanceable>
		<header-portlet-css>/css/main.css</header-portlet-css>
		<header-portlet-css>/css/vendor/prism.css</header-portlet-css>
		<header-portlet-javascript>/js/vendor/prism.js</header-portlet-javascript>
		<header-portlet-javascript>/js/reactor.js</header-portlet-javascript>
		<footer-portlet-javascript>/js/init.js</footer-portlet-javascript>
